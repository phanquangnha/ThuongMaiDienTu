<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UIFragment.ProfileFragment">
    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvtopprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvborAVT"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="200dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="200dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_person">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/cvborAVT"
                android:text="Tên"
                android:textSize="20dp"
                android:gravity="center"
                android:id="@+id/nameProfile"
                android:textColor="@color/yellow_pri"
                android:fontFamily="@font/roboto"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_below="@+id/cvtopprofile">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp"
                    >
                    <TextView
                        android:id="@+id/prThongtin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="    Thiết lập tài khoản"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_pri"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:layout_marginRight="10dp">
                    </TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/prQLSP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="    Quản lý sản phẩm"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_pri"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:layout_marginRight="10dp">
                    </TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp"
                    >
                    <TextView
                        android:id="@+id/prLSDH"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="    Lịch sử dơn hàng"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_pri"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:layout_marginRight="10dp">
                    </TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="    Đơn hàng đang xử lý"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_pri"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:layout_marginRight="10dp">
                    </TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="    Trung tâm trợ giúp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_pri"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:layout_marginRight="10dp">
                    </TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="20dp"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/logOut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="    Đăng xuất"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/yellow_pri"
                        android:drawableStart="@drawable/icon_logout"
                        android:drawableEnd="@drawable/icon_next"
                        android:layout_marginRight="10dp">
                    </TextView>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</FrameLayout>